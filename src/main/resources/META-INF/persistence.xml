<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.1"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
    <!-- Define persistence unit -->
    <persistence-unit name="JpaPU">
        <description>jpa 01</description>
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <exclude-unlisted-classes>false</exclude-unlisted-classes>
 		
        <properties>
            <property name="javax.persistence.schema-generation.database.action" value="update" />
            <!-- DON'T USE THIS IN PRODUCTION -->
            <!-- automatically drop and create required database tables -->
<!--             <property name="javax.persistence.schema-generation.database.action" value="drop-and-create" /> -->
<!--             <property name="javax.persistence.schema-generation.create-script-source" value="create-db.sql" /> -->
<!--             <property name="javax.persistence.schema-generation.drop-script-source" value="drop-db.sql" /> -->
<!--             <property name="javax.persistence.sql-load-script-source" value="data.sql" /> -->

            <!-- database connection -->
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/jpa_l01" />
            <property name="javax.persistence.jdbc.user" value="postgres" />
            <property name="javax.persistence.jdbc.password" value="postgres" />
                 
            <!-- configure logging -->
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.format_sql" value="true" />
            <property name="hibernate.use_sql_comments" value="true" />

<!--             <property name="eclipselink.logging.level" value="TRACE"/> -->
<!--             <property name="eclipselink.logging.level.sql" value="TRACE"/> -->
<!--             <property name="eclipselink.logging.parameters" value="true"/> -->
        </properties>
    </persistence-unit>

    <persistence-unit name="JpaPUMySQL">
        <description>jpa 01</description>
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <exclude-unlisted-classes>false</exclude-unlisted-classes>
 
        <properties>
            <property name="javax.persistence.schema-generation.database.action" value="update" />
            <!-- DON'T USE THIS IN PRODUCTION -->
            <!-- automatically drop and create required database tables -->
<!--             <property name="javax.persistence.schema-generation.database.action" value="drop-and-create" /> -->
<!--             <property name="javax.persistence.schema-generation.create-script-source" value="create-db.sql" /> -->
<!--             <property name="javax.persistence.schema-generation.drop-script-source" value="drop-db.sql" /> -->
<!--             <property name="javax.persistence.sql-load-script-source" value="data.sql" /> -->

            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />

            <!-- database connection -->
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/jpa_l01" />
            <property name="javax.persistence.jdbc.user" value="root" />
            <property name="javax.persistence.jdbc.password" value="root" />
                 
            <!-- configure logging -->
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.format_sql" value="true" />
            <property name="hibernate.use_sql_comments" value="true" />

            <property name="eclipselink.logging.level" value="TRACE"/>
            <property name="eclipselink.logging.level.sql" value="TRACE"/>
            <property name="eclipselink.logging.parameters" value="true"/>
        </properties>
    </persistence-unit>
</persistence>